<Page x:Class="MoveGradient.Pages.GradientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Width="Auto"
      Height="Auto"
      MinHeight="200"
      MinWidth="200"
	Title="GradientPage">

    <Grid>
        <Image Name="imageGradient" HorizontalAlignment="Stretch" Height="300" VerticalAlignment="Stretch" Margin="10" Source="/Images/GradientImg.png" MouseUp="imageGradient_MouseUpEvent" MouseDown="imageGradient_MouseDownEvent" MouseMove="imageGradient_MouseMove"  MouseLeave="imageGradient_MouseLeave"/>

        <Ellipse Name="actuatorLeft" Fill="Transparent" HorizontalAlignment="Left" Height="10" Margin="5,60,5,0" VerticalAlignment="Center" Width="10" />
        <Ellipse Name="actuatorRight" Fill="Transparent" HorizontalAlignment="Right" Height="10" Margin="5,60,5,0" VerticalAlignment="Center" Width="10" />
        <Ellipse Name="actuatorTop" Fill="Transparent" HorizontalAlignment="Center" Height="10" Margin="190,0,190,0" VerticalAlignment="Top" Width="10" RenderTransformOrigin="0.4,7.3" />
        <Ellipse Name="actuatorBottom" Fill="Transparent" HorizontalAlignment="Center" Height="10" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="10" />

    </Grid>
</Page>
