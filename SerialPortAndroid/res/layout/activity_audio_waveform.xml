<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.uta.serialport.activity.AudioWaveformActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_channel1_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Frequence Channel 1" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar_channel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OffButtonClick"
        android:width="150dp"
        android:layout_marginBottom="15dp"
        android:text="Off" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SineWaveClick"
        android:width="150dp"
        android:layout_marginBottom="15dp"
        android:text="Sine Wave" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SawtoothWaveClick"
        android:width="150dp"
        android:layout_marginBottom="15dp"
        android:text="Sawtooth Wave" />

    <ToggleButton
        android:id="@+id/toggle_button_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="IncreaseFrequencyTimerClick" />

</LinearLayout>
